@{
    ViewData["Title"] = "Admin Panel - Managers";
}

<h1 class="display-3 text-center">Admin Panel - Managers Section</h1>
<br>
<p class="text-center text-md">Welcome to the managers panel. You can add, delete or modify manager informations here</p>
<br>

<div class="container text-center">
    <div class="d-inline-flex align-items-center">
        <a class="btn btn-md btn-success mx-3" asp-action="AddManager" asp-controller="AdminManagers">Add Manager</a>
        <a class="btn btn-md btn-danger mx-3" asp-action="DeleteManager" asp-controller="AdminManagers">Delete Manager</a>
        <a class="btn btn-md btn-primary mx-3" asp-action="UpdateManager" asp-controller="AdminManagers">Modify Manager</a>
    </div>
</div>