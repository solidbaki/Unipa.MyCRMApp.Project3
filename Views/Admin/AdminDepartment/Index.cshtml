@{
    ViewData["Title"] = "Admin Panel - Departments";
}
<h1 class="display-3 text-center">Admin Panel - Department Section</h1>
<br>
<p class="text-center text-md">Welcome to the departments panel. You can add, delete or modify departments here</p>
<br>

<div class="container text-center">
    <div class="d-inline-flex align-items-center">
    <a class="btn btn-md btn-success mx-3" asp-action="AddDepartment" asp-controller="AdminDepartment">Add Department</a>
    <a class="btn btn-md btn-danger mx-3" asp-action="DeleteDepartment" asp-controller="AdminDepartment">Delete Department</a>
    <a class="btn btn-md btn-primary mx-3" asp-action="UpdateDepartment" asp-controller="AdminDepartment">Modify Department</a>
    </div>
</div>
