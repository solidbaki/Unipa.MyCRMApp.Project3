@{
    ViewData["Title"] = "Admin Panel - Update Departments";
}
<h4 class="display-5 text-center">Update Department</h4>    <br>
<p class="text-center">Update a department by it's name </p>
<div class="form-group text-center p-auto">
    <label for="inputDepartmentNameUpdateOld" class="m-3">Current Department Name</label>
    <input type="text" class="form-control my-auto" id="inputDepartmentNameUpdateOld" aria-describedby="departmentNameOld" placeholder="Enter current department name"> <br>
    <label for="inputDepartmentNameUpdateNew" class="m-3">New Department Name</label>
    <input type="text" class="form-control my-auto" id="inputDepartmentNameUpdateNew" aria-describedby="departmentNameNew" placeholder="Enter current department name"> <br>
    <button class="btn-lg btn-primary">Update</button>  <br>
</div>