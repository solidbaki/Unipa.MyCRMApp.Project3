@{
    ViewData["Title"] = "Admin Panel - Add Departments";
}
<h4 class="display-5 text-center">Add New Department</h4>

<div class="form-group border p-3 text-center" >
    <label for="inputDepartmentName">Department Name</label>
    <input type="text" class="form-control my-auto" id="inputDepartmentName" aria-describedby="departmentName" placeholder="Enter department name"> <br>
    <label for="inputDepartmentCategory">Category</label>
    <input type="text" class="form-control" id="inputDepartmentCategory" aria-describedby="departmentCategory" placeholder="Enter department category">
    <button class="btn-lg btn-success m-3">Submit</button>

</div>  <br>

