@{
    ViewData["title"] = "Client Panel - Monitor Task";
}
<h4 class="display-5 text-center">Monitor a Task</h4>
<br>
<p class="text-center">Clients can monitor current status of their tasks here</p>
<div class="form-group text-center p-auto">
    <label for="inputTaskIDMonitor" class="m-3">Task ID</label>
    <input type="text" class="form-control my-auto" id="inputTaskIDMonitor" aria-describedby="managerName" placeholder="Enter task ID here"> <br>
    <button class="btn-lg btn-success">Show</button>
</div>
